<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8DF091"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6E6DEDE"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Hình minh họa -->
        <ImageView
            android:id="@+id/imageLogin"
            android:layout_width="390dp"
            android:layout_height="400dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="login image"
            android:src="@drawable/aa" />

        <!-- Lời chào -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Welcome to TD Store!"
            android:textColor="#1D1C1C"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Vui lòng đăng nhập!"
            android:textColor="#1A1919"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Nhập email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Nhập mật khẩu -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Nút Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6200EE"
            android:text="Đăng nhập"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <!-- Đăng ký -->
        <TextView
            android:id="@+id/txtRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Chưa có tài khoản? Đăng ký"
            android:textColor="#070707"
            android:textSize="14sp" />

        <!-- Quên mật khẩu -->
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quên mật khẩu?"
            android:textColor="#090909" />
    </LinearLayout>
</ScrollView>
